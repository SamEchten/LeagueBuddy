<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llNewsItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/inputfield"
    android:backgroundTint="@color/navBarAccent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/ivNewsImage"
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@drawable/aatrox_0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/tvNewsItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_placeholder"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvNewsItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_placeholder"
            android:textColor="@color/underTitle"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/tvNewsItemDate"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/inputfield"
            android:backgroundTint="@color/blueAccent"
            android:gravity="center"
            android:text="15 June"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>